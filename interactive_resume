    <script>
        document.addEventListener('DOMContentLoaded', () => {

            // Mobile Navigation Toggle
            const mobileNavToggle = document.getElementById('mobile-nav-toggle');
            const mobileNav = document.getElementById('mobile-nav');
            mobileNavToggle.addEventListener('click', () => {
                mobileNav.classList.toggle('hidden');
            });
            
            // Close mobile nav on link click
            mobileNav.addEventListener('click', (e) => {
                if(e.target.tagName === 'A'){
                    mobileNav.classList.add('hidden');
                }
            });


            // Skills Chart
            const skillsCtx = document.getElementById('skillsChart').getContext('2d');
            const skillsData = {
                labels: ['Languages', 'Frameworks', 'Game Dev', 'Databases', 'Dev Tools'],
                datasets: [{
                    label: 'Proficiency',
                    data: [8, 9, 8, 7, 9],
                    backgroundColor: 'rgba(20, 184, 166, 0.2)',
                    borderColor: 'rgb(15, 118, 110)',
                    pointBackgroundColor: 'rgb(15, 118, 110)',
                    pointBorderColor: '#fff',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: 'rgb(15, 118, 110)'
                }]
            };
            new Chart(skillsCtx, {
                type: 'radar',
                data: skillsData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        r: {
                            angleLines: { color: 'rgba(0, 0, 0, 0.1)' },
                            grid: { color: 'rgba(0, 0, 0, 0.1)' },
                            pointLabels: { font: { size: 14 } },
                            ticks: {
                                backdropColor: 'rgba(0,0,0,0)',
                                stepSize: 2
                            },
                            suggestedMin: 0,
                            suggestedMax: 10
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });

            // Projects Data
            const projects = [
                {
                    id: 'kantinir',
                    title: 'KanTinir Mobile App',
                    year: '2024',
                    summary: 'A food and housing mobile app for University of the Philippines Visayas constituents.',
                    description: 'A comprehensive food and housing mobile application designed to serve the students and staff of the University of the Philippines Visayas, Miagao campus. It helps users find available housing and food stalls easily.',
                    technologies: ['Flutter', 'Dart', 'Firebase']
                },
                {
                    id: 'ceres',
                    title: 'Ceres Terminal (Game)',
                    year: '2024',
                    summary: "A modern reimagining of the classic 1979 arcade game 'Asteroids'.",
                    description: "Developed for the Warrior's Crusade Game Development Hackathon, this project is a modern take on the classic 'Asteroids'. Our team of five secured the championship with this Unity-based game.",
                    technologies: ['Unity', 'C#', 'Git']
                },
                {
                    id: 'lyre',
                    title: 'Genshin Impact Lyre Sim',
                    year: '2022',
                    summary: 'A desktop instrument simulator made in Java.',
                    description: 'A desktop application that simulates the in-game lyre instrument from the popular game Genshin Impact, allowing users to play and practice music on their computers.',
                    technologies: ['Java', 'Swing UI']
                },
                {
                    id: 'editor',
                    title: 'Freelance Editor',
                    year: '2018 - Present',
                    summary: 'Video and photo editing for various clients and organizations.',
                    description: 'Utilizing professional software to provide high-quality video and photo editing services. A notable collaboration was with Ilawod Southern Negros to create public awareness posters for the fisheries sector.',
                    technologies: ['Adobe Premiere Pro', 'Adobe Photoshop', 'Filmora']
                }
            ];

            const projectCardsContainer = document.getElementById('project-cards');
            const projectModalsContainer = document.getElementById('project-modals');

            projects.forEach(project => {
                // Create Project Card
                const card = document.createElement('div');
                card.className = 'bg-white rounded-lg shadow-md overflow-hidden transform hover:-translate-y-2 transition-transform duration-300';
                card.innerHTML = `
                    <div class="p-6">
                        <p class="text-sm text-slate-500 mb-1">${project.year}</p>
                        <h3 class="font-bold text-xl mb-2">${project.title}</h3>
                        <p class="text-slate-600 mb-4 h-12">${project.summary}</p>
                        <button data-modal-target="${project.id}" class="open-modal-btn font-medium text-teal-600 hover:text-teal-800 transition-colors">View Details &rarr;</button>
                    </div>
                `;
                projectCardsContainer.appendChild(card);

                // Create Project Modal
                const modal = document.createElement('div');
                modal.id = `${project.id}`;
                modal.className = 'modal-backdrop fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50 opacity-0 pointer-events-none';
                modal.innerHTML = `
                    <div class="modal-content bg-white rounded-lg shadow-2xl w-full max-w-2xl mx-auto p-8 transform scale-95">
                        <div class="flex justify-between items-start">
                             <div>
                                <p class="text-sm text-slate-500 mb-1">${project.year}</p>
                                <h2 class="text-2xl font-bold mb-4">${project.title}</h2>
                            </div>
                            <button data-modal-close="${project.id}" class="close-modal-btn text-3xl font-light text-slate-500 hover:text-slate-800">&times;</button>
                        </div>
                        <p class="text-slate-600 mb-6">${project.description}</p>
                        <div class="flex flex-wrap gap-2">
                            ${project.technologies.map(tech => `<span class="bg-teal-100 text-teal-800 text-sm font-medium px-3 py-1 rounded-full">${tech}</span>`).join('')}
                        </div>
                    </div>
                `;
                projectModalsContainer.appendChild(modal);
            });

            // Modal open/close logic
            document.querySelectorAll('.open-modal-btn').forEach(button => {
                button.addEventListener('click', () => {
                    const modalId = button.getAttribute('data-modal-target');
                    const modal = document.getElementById(modalId);
                    modal.classList.remove('opacity-0', 'pointer-events-none');
                    modal.querySelector('.modal-content').classList.remove('scale-95');
                });
            });

            document.querySelectorAll('.close-modal-btn').forEach(button => {
                button.addEventListener('click', () => {
                    const modalId = button.getAttribute('data-modal-close');
                    const modal = document.getElementById(modalId);
                    modal.classList.add('opacity-0');
                    modal.querySelector('.modal-content').classList.add('scale-95');
                    setTimeout(() => modal.classList.add('pointer-events-none'), 300);
                });
            });
            
             document.querySelectorAll('.modal-backdrop').forEach(backdrop => {
                backdrop.addEventListener('click', (e) => {
                    if (e.target === backdrop) {
                         backdrop.classList.add('opacity-0');
                         backdrop.querySelector('.modal-content').classList.add('scale-95');
                         setTimeout(() => backdrop.classList.add('pointer-events-none'), 300);
                    }
                });
            });


            // Timeline Data
            const timelineEvents = [
                {
                    type: 'Education',
                    title: "BS in Computer Science",
                    institution: "University of the Philippines, Visayas",
                    date: "2020 - Present",
                    description: "Pursuing a comprehensive degree in Computer Science with High Honors, focusing on core principles, algorithms, and software development.",
                    icon: 'ðŸŽ“'
                },
                {
                    type: 'Experience',
                    title: "Warrior's Crusade Hackathon - Champion",
                    institution: "Central Philippines University, Iloilo",
                    date: "2024",
                    description: "Led a team of 5 to victory, reimagining the classic 'Asteroids' game using Unity 3D and C#. Managed collaboration via Git.",
                    icon: 'ðŸ†'
                },
                 {
                    type: 'Education',
                    title: "CS50's Mobile App Dev Course",
                    institution: "Harvard University (Online)",
                    date: "2024 - Present",
                    description: "Enhancing skills in cross-platform mobile development with React Native and modern JavaScript frameworks.",
                    icon: 'ðŸ“š'
                },
                {
                    type: 'Experience',
                    title: "Intern, City Engineering Office",
                    institution: "Bayawan City, Negros Oriental",
                    date: "Feb 2020 - Mar 2020",
                    description: "Gained practical experience by creating architectural structures with AutoCAD and conducting on-site construction assessments.",
                    icon: 'ðŸ’¼'
                }
            ];

            const timelineContainer = document.getElementById('timeline-items');
            timelineEvents.forEach((event, index) => {
                const alignment = index % 2 === 0 ? 'left' : 'right';
                const item = document.createElement('div');
                item.className = 'relative';
                
                const itemContent = `
                    <div class="absolute w-8 h-8 bg-teal-500 rounded-full top-0 left-1/2 transform -translate-x-1/2 flex items-center justify-center text-white">${event.icon}</div>
                    <div class="w-full md:w-1/2 p-4 bg-white rounded-lg shadow-md ${alignment === 'left' ? 'md:ml-auto md:mr-16' : 'md:mr-auto md:ml-16'}">
                        <p class="text-sm text-slate-500 mb-1">${event.date}</p>
                        <h3 class="font-bold text-lg mb-1">${event.title}</h3>
                        <p class="font-medium text-slate-600 mb-2">${event.institution}</p>
                        <p class="text-sm text-slate-500">${event.description}</p>
                    </div>
                `;
                item.innerHTML = itemContent;
                timelineContainer.appendChild(item);
            });

        });
    </script>
